
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %>
    <% end %>
<% end %>

<%= form_for @scientist do |f|%>
    <p><%= f.label :name %>
    <%= f.text_field :name %>
    <p><%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %>
    <p><%= f.submit %>
<% end %>