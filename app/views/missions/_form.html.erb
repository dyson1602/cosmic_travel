<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <p><%= e %>
    <% end %>
<% end %>

<%= form_for @mission do |f| %>
    <p><%= f.label :name %>
    <%= f.text_field :name %>
    <p><%= f.label :scientist %>
    <%= f.collection_select :scientist_id, @scientists, :id, :name %>
    <p><%= f.label :planet %>
    <%= f.collection_select :planet_id, @planets, :id, :name %>
    <p><%= f.submit %>
<% end %>